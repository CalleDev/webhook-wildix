# Variabili d'ambiente per il webhook Wildix

# Configurazione Server (HTTP locale, HTTPS via Nginx)
FLASK_ENV=production
FLASK_DEBUG=False
HOST=127.0.0.1
PORT=9001

# Configurazione Logging
LOG_LEVEL=INFO
LOG_FILE=logs/webhook.log

# Configurazione Cartelle
MESSAGES_DIR=messages
LOGS_DIR=logs

# Sicurezza (opzionale - per implementazioni future)
# SECRET_KEY=your-secret-key-here
# WEBHOOK_TOKEN=your-webhook-token

# Database (per implementazioni future)
# DATABASE_URL=postgresql://user:password@localhost/wildix_webhook